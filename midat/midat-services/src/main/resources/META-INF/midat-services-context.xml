<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans     http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
                            http://www.springframework.org/schema/context   http://www.springframework.org/schema/context/spring-context-3.0.xsd">

    <!-- Activate annotations for registered beans (@Autowired etc) -->
    <context:annotation-config/>

    <context:component-scan base-package="ch.cscf.midat.services" />

    <!-- I18N stuff -->
    <bean id="messageSource"
          class="ch.cscf.jeci.services.general.CustomReloadableResourceBundleMessageSource">
        <property name="fallbackToSystemLocale" value="false" />
        <property name="basenames">
            <list>
                <value>classpath:versioning</value>
                <value>classpath:CommonGUIMessages</value>
                <value>classpath:ValidationMessages</value>
                <value>classpath:MIDAT-GUIMessages</value>
            </list>
        </property>
        <property name="defaultEncoding" value="UTF-8"/>
    </bean>

    <!-- The value here matches the ID of the application in the appmanager.admin_application DB table -->
    <bean class="ch.cscf.jeci.services.general.ActiveApplicationService" >
        <constructor-arg name="applicationId" value="2"/>
    </bean>


</beans>